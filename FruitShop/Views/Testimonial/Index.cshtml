@using FruitShop.Models.Classes
@model List<FruitShop.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_LayOut.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Comment</th>
        <th>Image</th>
        <th>Update</th>
        <th>Delete</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Name</td>
            <td>@x.Message</td>
            <td>@x.Image</td>
            <td><a class="btn btn-info" href="/Testimonial/Update/@x.ID">Update</a></td>
            <td><a class="btn btn-info" href="/Testimonial/Delete/@x.ID">Delete</a></td>

        </tr>

    }
</table>
<a href="/Testimonial/Add" class="btn btn-default">Add New Comment</a>